<p id="notice"><%= notice %></p>

<h1>Listing Trail Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>trail</th>
      <th>user</th>
      <th>rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trail_users.each do |trail_user| %>
      <tr>
        <td><%= trail_user.trail.name %></td>
        <td><%= trail_user.user.name %></td>
        <td><%= trail_user.rating %></td>
        <td><%= link_to 'Show', trail_user %></td>
        <td><%= link_to 'Edit', edit_trail_user_path(trail_user) %></td>
        <td><%= link_to 'Destroy', trail_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

